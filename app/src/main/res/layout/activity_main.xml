<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Name:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_title"
        android:layout_alignBaseline="@+id/name_input"
        android:layout_alignBottom="@+id/name_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email_title"
        android:layout_marginTop="68dp"
        android:text="E-Mail:"
        android:layout_below="@+id/name_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_input"
        android:layout_alignBaseline="@+id/email_title"
        android:layout_alignBottom="@+id/email_title"
        android:layout_toRightOf="@+id/save_btn"
        android:layout_alignRight="@+id/clear_btn"
        android:layout_alignEnd="@+id/clear_btn" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/name_input"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/email_input"
        android:layout_alignStart="@+id/email_input"
        android:layout_alignRight="@+id/email_input"
        android:layout_alignEnd="@+id/email_input" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/clear_btn"
        android:layout_below="@+id/email_input"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="151dp"
        android:onClick="saveUser"
        android:layout_toRightOf="@+id/save_btn"
        android:layout_toEndOf="@+id/save_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/save_btn"
        android:layout_alignTop="@+id/clear_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
